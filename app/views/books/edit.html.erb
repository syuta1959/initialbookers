<body>

  <h1>Editing Book</h1>

  <% if @book.errors.any? %>
  <div class="error-explanation">
      <h2 class="field_with_errors"><%= @book.errors.count %> error prohibited this book from being saved:</h2>
      <ul class="field_with_errors"><% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
  </div>
  <% end %>

  <%= form_with model:@book, local: true do |f| %>
      <div class="field">
        <h4>Title</h4>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <h4>Body</h4>
        <%= f.text_area :body %>
      </div>
      <div class="actions">
        <%= f.submit 'Update Book' %>
      </div>
  <% end %>

    <%= link_to "Show", book_path(@book.id) %>
  |
    <%= link_to "Back", "/books" %>
</body>